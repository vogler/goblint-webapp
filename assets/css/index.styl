// CodeMirror
// http://codemirror.net/demo/resize.html
.CodeMirror {
  border: 1px solid #eee;
  height: auto;
}
.CodeMirror-scroll {
  overflow-y: hidden;
  overflow-x: auto;
}

// Bootstrap: disable responsive layout
.container
  max-width none !important
.icon-flipped
  transform: scaleX(-1);
  -moz-transform: scaleX(-1);
  -webkit-transform: scaleX(-1);
  -ms-transform: scaleX(-1);

#output
  width 100%
  height 200px
.warnings
  width 1.2em